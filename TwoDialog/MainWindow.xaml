<Window x:Class="TwoDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Label Content="Enter Your Name" HorizontalAlignment="Left" Margin="10,98,0,0"></Label>
        <TextBox Name="txtName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Height="34" Margin="140,80,0,0"></TextBox>
        <Button Content="Say Hello" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="25" Margin="170,130,0,0" Click="Button_Click"></Button>
        <Label Name="lblResult" Content="" HorizontalAlignment="Left" Margin="10,200,0,0"></Label>
    </Grid>
</Window>
